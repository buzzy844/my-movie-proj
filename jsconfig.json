{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "plugins": []
  },
  "include": ["src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
